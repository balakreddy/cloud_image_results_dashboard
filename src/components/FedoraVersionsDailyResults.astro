---
import DailyBarChart from './DailyBarChart.astro';

interface FedoraVersion {
  version: string;
  latestResults: {
    timestamp: string;
    total: number;
    passed: number;
    failed: number;
    skipped: number;
    successRate: number;
  };
  weeklyData: Array<{
    date: string;
    total: number;
    passed: number;
    failed: number;
    skipped: number;
    successRate: number;
  }>;
}

interface Props {
  fedoraVersions: FedoraVersion[];
}

const { fedoraVersions } = Astro.props;

// Generate last 7 days for consistent x-axis
const today = new Date();
const last7Days: string[] = [];
for (let i = 6; i >= 0; i--) {
  const date = new Date(today);
  date.setDate(date.getDate() - i);
  last7Days.push(date.toISOString().split('T')[0]);
}

// Prepare data for each version
function prepareVersionData(version: FedoraVersion) {
  return last7Days.map(date => {
    const dayData = version.weeklyData.find(d => d.date === date);
    return dayData || {
      date,
      total: 0,
      passed: 0,
      failed: 0,
      skipped: 0,
      successRate: 0
    };
  });
}
---

<div class="daily-results-container">
  <h2 class="section-title"> Last 7 Days </h2>
  
  <div class="versions-grid">
    {fedoraVersions.map((version) => {
      const dailyData = prepareVersionData(version);
      
      return (
        <div class="version-widget">
          <DailyBarChart 
            title={version.version}
            dailyData={dailyData}
            width={380}
            height={220}
          />
        </div>
      );
    })}
  </div>
</div>

<style>
  .daily-results-container {
    margin: 32px 0;
    padding: 0 16px;
  }

  .section-title {
    font-size: 28px;
    font-weight: 700;
    color: #1f2937;
    text-align: center;
    margin-bottom: 32px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .versions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 24px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .version-widget {
    background: white;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
    overflow: hidden;
    box-shadow: 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .version-widget:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .version-summary {
    padding: 16px;
    background: #f9fafb;
    border-top: 1px solid #e5e7eb;
  }

  .summary-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
  }

  .summary-item:last-child {
    margin-bottom: 0;
  }

  .label {
    font-size: 12px;
    color: #6b7280;
    font-weight: 500;
  }

  .value {
    font-size: 12px;
    color: #374151;
    font-weight: 600;
  }

  .success-rate {
    color: #059669;
    font-size: 14px;
  }

  .timestamp {
    color: #6b7280;
    font-size: 11px;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .versions-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .section-title {
      font-size: 24px;
      margin-bottom: 24px;
    }

    .daily-results-container {
      padding: 0 8px;
    }
  }

  @media (max-width: 480px) {
    .versions-grid {
      grid-template-columns: 1fr;
    }
    
    .version-widget {
      margin: 0 -8px;
    }
  }
</style>
